<%-include('../partials/header.ejs')%>

		<h1 class="p-5 pb-8">Kitchen Inventory</h1>
		<table class="table table-striped table-bordered table-dark mb-0">
			<thead class="">
				<tr>
					<th scope="col">Ingredient</th>
					<th scope="col">Quantity</th>
					<th scope="col">Edit</th>
					<th scope="col">Delete</th>
				</tr>
			</thead>
			<tbody>
				<% for (const ingredient of ingredients) { %>
					<tr>
						<td><a class="" href="/ingredients/<%=ingredient.id%>"><%= ingredient.name %></a></td>
						<td><%= ingredient.qty  %></td>
						<td>
							<form method="GET" action="/ingredients/<%=ingredient.id%>/edit"><button class="btn btn-primary btn-sm" <%-util.enableIfAdmin(currentUser)%>>Edit</button>
							</form>
						</td>
						<td>
							<form 
								method="POST" 
								action="/ingredients/<%=ingredient.id%>?_method=DELETE">
								<button class="btn btn-danger btn-sm" <%-util.enableIfAdmin(currentUser)%>>Delete</button>
							</form>
						</td>
					</tr>	
				<% } %>
			</tbody>
		</table>

<%-include('../partials/footer.ejs')%>