<%- include('../partials/header.ejs') %>
<script type="text/javascript" src="/js/recipeUtil.js" defer></script>
<h1 class="p-5 pb-8">New Recipe</h1>
	<div class="card w-50 align-items-center p-3">
		<form class="w-100" method="POST" action="/recipes">
			<div class="input-container">
				<label for="name">Name</label>
				<input class="w-100" type="text" name="name" id="name" autofocus required>
			</div>
			<div class="input-container ingredient-container w-100">
				<div class="ingredient-selector-container">
					<label for="ingredient-selector">Ingredients</label>
					<input list="ingredient-list" id="ingredient-selector" >
					<datalist id="ingredient-list">
						<%-util.buildIngredientOptions(ingredients)%>
					</datalist>
				</div>
				<div class="qty-container">
					<label for="qty">Quantity</label>
					<input class="w-100"type="number" id="qty" >
				</div>	
				<button type="button" id="add-ingredient-btn" class="btn btn-primary btn-sm mt-2">Add Ingredient</button>
			</div>
			<section id="current-ingredients">
				
			</section>
			<div class="input-container">
				<label for="steps">Directions</label>
				<textarea id="steps" name="steps" class="w-100" required></textarea>
			</div>

			<button type="submit" class="btn btn-primary w-100 mt-2">Add Recipe</button>
		</form>
	</div>
<%- include('../partials/footer.ejs') %>


