<%- include('../partials/header.ejs')%>
	
	<h1 class="p-5 pb-8">All Recipes</h1>
	<table class="table table-striped table-bordered table-dark mb-0">
			<thead class="">
				<tr>
					<th scope="col">Recipe</th>
					<th scope="col">Created By</th>
					<th scope="col">Created On</th>
					<th scope="col">Edit</th>
					<th scope="col">Delete</th>
				</tr>
			</thead>
			<tbody>
				<% for (const recipe of recipes) { %>
					<tr>
						<td><a class="" href="/recipes/<%=recipe.id%>"><%= recipe.name %></a></td>
						<td><%= recipe.createdBy.username %></td>
						<td><%= recipe.createdAt.toDateString() + " " + recipe.createdAt.toTimeString() %></td>
						<td>
							<form method="GET" action="/recipes/<%=recipe.id%>/edit"><button class="btn btn-primary btn-sm" <%-util.enableIfAdmin(currentUser)%>>Edit</button>
							</form>
						</td>
						<td>
							<form 
								method="POST" 
								action="/recipes/<%=recipe.id%>?_method=DELETE">
								<button class="btn btn-danger btn-sm" <%-util.enableIfAdmin(currentUser)%>>Delete</button>
							</form>
						</td>
					</tr>	
				<% } %>
			</tbody>
		</table>

<%- include('../partials/footer.ejs')%>