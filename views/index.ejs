<%-include('./partials/header.ejs')%>
	<div class="container w-75 h-100 d-flex flex-column align-items-center">
		<%-include('./partials/nav.ejs')%>
		<h2 class="p-5 pb-8">Kitchen Inventory</h2>
		<table class="table table-striped table-bordered table-dark mb-0">
			<thead class="">
				<tr>
					<th scope="col">Ingredient</th>
					<th scope="col">Quantity</th>
					<th scope="col">Edit</th>
					<th scope="col">Delete</th>
				</tr>
			</thead>
			<tbody>
				<% for (const ingredient of ingredients) { %>
					<tr>
						<td><a class="" href="/ingredients/<%=ingredient.id%>"><%= ingredient.name %></a></td>
						<td><%= ingredient.qty  %></td>
						<td><a class="" href="/ingredients/<%=ingredient.id%>/edit"><button class="btn btn-primary btn-sm">Edit</button></a></td>
						<td>
							<form 
								method="POST" 
								action="/ingredients/<%=ingredient.id%>?_method=DELETE">
								<button class="btn btn-danger btn-sm">Delete</button>
							</form>
						</td>
					</tr>	
				<% } %>
			</tbody>
		</table>
	</div>
<%-include('./partials/footer.ejs')%>